<Window x:Class="Visualiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="World visualization" Height="500" Width="725">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Canvas x:Name="worldCanvas" Grid.Row="0"/>
        
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="host" Grid.Column="2" FontSize="20"/>
            <TextBlock Text="Server address: " Grid.Column="1" FontSize="20" HorizontalAlignment="Right"/>
            <Button x:Name="button"  Content="CONNECT" Click="Button_Click" Grid.Column="0" Height="30"/>
        </Grid>
        
    </Grid>
</Window>
